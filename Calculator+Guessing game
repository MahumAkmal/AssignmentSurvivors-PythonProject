while True:
    print("Calculator Application") # entering the Application
    # menu-based selection of the operation
    print("1. Addition")
    print("2. Subtraction")
    print("3. Multiplication")
    print("4. Division")
    print("5. To exit the Calculator")

    operation = input("Enter the operation you want to perform (1,2,3,4,5): ")

    # exiting application if the user chooses to do so
    if operation == '5':
        print("Exiting Calculator....")  
        break

    a = float(input("Enter the First Number: "))  # input first number
    b = float(input("Enter the Second Number: ")) # input the second number

    # performing the selected operation and printing results 
    if operation == '1':
        print("The sum of two numbers is:", a + b)
    elif operation == '2':
        print("The difference of two numbers is:", a - b)
    elif operation == '3':
        print("The product of two numbers is:", a * b)
    elif operation == '4':
        if b == 0:
            print("Division with zero is not possible.")
        else:
            print(a, "/", b, "=", a / b)
    else:
        print("Enter an appropriate operation.") # to avoid user entering invalid inputs





import random # importing module for random number generation

def guessing_game():
    num=random.randint(1,50) # generates a random number between 1-50 inclusive
    attempts=0
    print("I have a number between 1 and 50... guess it if you can!")
    
    while True: # the loop runs infinitely until it reaches a break statement (where user guesses correctly)
        guess=int(input("Guess a number (1-50): "))
        attempts+=1 # increment attempts by 1 for each round, for score system
        if guess<1 or guess>50:
            print("Your guess was outside the range! Please try again.") # prompts user for another guess if invalid input
        elif guess<num:
            print("Too low! Try again.")
        elif guess>num:
            print("Too high! Try again.")
        else:
            print(f"Correct! Your score is: {attempts}.") # displays score as the number of attempts it took to guess
            break
# To run the guessing game infinitely until user exits by entering 0:   
while True:
    guessing_game() 
    restart=int(input("Would you like to play again? Enter 1 for yes, 0 for no: "))
    if restart==0:
        break
